# ============================================================
# SEO Health Report System - Production Configuration
# ============================================================
# Copy this file to production.env and fill in actual values
# NEVER commit production.env to version control!
# ============================================================

# ------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------
# Use PostgreSQL in production (SQLite for dev only)
DATABASE_URL=postgresql://user:password@host:5432/seo_health_prod

# ------------------------------------------------------------
# Security
# ------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=CHANGE_ME_generate_a_secure_random_key

# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_AUDITS_PER_DAY=100

# ------------------------------------------------------------
# AI Provider API Keys (Required)
# ------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx

# ------------------------------------------------------------
# AI Provider API Keys (Optional - Enhanced Features)
# ------------------------------------------------------------
GOOGLE_API_KEY=xxx
XAI_API_KEY=xai-xxx
PERPLEXITY_API_KEY=pplx-xxx

# ------------------------------------------------------------
# Report Generation
# ------------------------------------------------------------
# Tier: low ($0.023/report), medium ($0.051/report), high ($0.158/report)
REPORT_TIER=medium

# Logo provider (recommended for high-quality logos)
LOGODEV_PUBLIC_KEY=pk_xxx

# ------------------------------------------------------------
# Stripe Payments (Production Keys)
# ------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID_BASIC=price_xxx
STRIPE_PRICE_ID_PRO=price_xxx
STRIPE_PRICE_ID_ENTERPRISE=price_xxx

# ------------------------------------------------------------
# Application Settings
# ------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
ENVIRONMENT=production

# ------------------------------------------------------------
# Storage
# ------------------------------------------------------------
# For S3-compatible storage (optional)
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx
# AWS_S3_BUCKET=seo-health-reports
# AWS_REGION=us-east-1

# ------------------------------------------------------------
# Monitoring (Optional)
# ------------------------------------------------------------
# SENTRY_DSN=https://xxx@sentry.io/xxx
# DATADOG_API_KEY=xxx

# ------------------------------------------------------------
# Feature Flags
# ------------------------------------------------------------
ENABLE_GROK_SENTIMENT=true
ENABLE_PREMIUM_REPORTS=true
ENABLE_COMPETITOR_ANALYSIS=true
